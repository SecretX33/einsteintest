<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/border_grey"
    android:paddingTop="7dp"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingBottom="7dp"
    android:layout_margin="3dp">

    <TextView
        android:id="@+id/tvCasa"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="15dp"
        android:textSize="18sp"
        android:gravity="center"
        android:text="@string/casa"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="6dp">
        <Spinner
            android:id="@+id/spinnerCor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:popupBackground="@color/white"
            android:entries="@array/arrayCor" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="9dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="7dp"
            android:src="@drawable/spinner_arrow" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="6dp">
        <Spinner
            android:id="@+id/spinnerNacio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:popupBackground="@color/white"
            android:entries="@array/arrayNacio" />
        <ImageView
            android:layout_width="8dp"
            android:layout_height="9dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="7dp"
            android:src="@drawable/spinner_arrow" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="6dp">
        <Spinner
            android:id="@+id/spinnerBebida"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:popupBackground="@color/white"
            android:entries="@array/arrayBebida" />
        <ImageView
            android:layout_width="8dp"
            android:layout_height="9dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="7dp"
            android:src="@drawable/spinner_arrow" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="6dp">
        <Spinner
            android:id="@+id/spinnerCigarro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:popupBackground="@color/white"
            android:entries="@array/arrayCigarro" />
    
        <ImageView
            android:layout_width="8dp"
            android:layout_height="9dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="7dp"
            android:src="@drawable/spinner_arrow" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    
        <Spinner
            android:id="@+id/spinnerAnimal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:popupBackground="@color/white"
            android:entries="@array/arrayAnimal" />
    
        <ImageView
            android:layout_width="8dp"
            android:layout_height="9dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="7dp"
            android:src="@drawable/spinner_arrow" />
    </FrameLayout>
</LinearLayout>